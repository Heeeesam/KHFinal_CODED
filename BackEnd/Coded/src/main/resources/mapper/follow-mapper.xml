<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Follow">

	<select id="selectFollowingList"
		resultType="kh.coded.dto.MemberDTO">
		select * from member where UserNo = ${ToUserId}
	</select>

	<select id="selectFollowerList"
		resultType="kh.coded.dto.MemberDTO">
		select * from member where UserNo = ${FromUserId}
	</select>



	<insert id="insertFollow">
		insert into Follow values(_seq.nextval, ${ToUserId},
		${FromUserId})
	</insert>



	<delete id="deleteFollow">
		delete from Follow where ToUserId = ${ToUserId} and FromUserId = ${FromUserId}
	</delete>

</mapper>